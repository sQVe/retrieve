{
  "name": "righttp",
  "version": "1.0.0",
  "description": "An opinionated easy-to-use functional Fetch API wrapper",
  "author": "Oskar Grunning <oskargrunning@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/sQVe/righttp#righttp",
  "repository": "github:sQVe/righttp",
  "bugs": "https://github.com/sQVe/righttp/issues",
  "keywords": [
    "easy-to-use",
    "fetch",
    "functional",
    "http",
    "opinionated",
    "wrapper"
  ],
  "scripts": {
    "build": "run-s clean build:*",
    "build:cjs": "BUILD_BUNDLE=cjs rollup -c",
    "build:es": "BUILD_BUNDLE=es rollup -c",
    "build:types": "tsc --declaration --outDir types src/index.ts && rm -f types/*.js",
    "clean": "rm -rf {coverage,es,lib,types}",
    "format": "run-s format:*",
    "format:prettier": "prettier --write '{**/*,*}.{js,json,jsx,md,ts,tsx,yaml}'",
    "format:eslint": "eslint --fix '{{src,test}/*,*}.{js,jsx,ts,tsx}'",
    "lint": "eslint '{**/*,*}.{ts,tsx}'",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:upload": "jest --coverage && codecov",
    "test:watch": "jest --watch --onlyChanged"
  },
  "main": "lib/righttp.js",
  "module": "es/righttp.mjs",
  "types": "types/index.d.ts",
  "files": [
    "es",
    "lib",
    "types"
  ],
  "devDependencies": {
    "@babel/cli": "~7.7.0",
    "@babel/core": "~7.7.0",
    "@babel/plugin-transform-runtime": "~7.7.0",
    "@babel/preset-env": "~7.7.0",
    "@babel/preset-typescript": "~7.7.0",
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "~2.12.0",
    "@typescript-eslint/parser": "~2.12.0",
    "babel-core": "~7.0.0-bridge.0",
    "babel-eslint": "~10.0.0",
    "babel-jest": "~24.9.0",
    "babel-plugin-ramda": "~2.0.0",
    "codecov": "~3.6.0",
    "eslint": "~6.7.0",
    "eslint-config-sqve": "~2.6.0",
    "eslint-plugin-fp": "~2.3.0",
    "eslint-plugin-import": "~2.19.0",
    "eslint-plugin-node": "~10.0.0",
    "eslint-plugin-promise": "~4.2.0",
    "eslint-plugin-react": "~7.17.0",
    "eslint-plugin-standard": "~4.0.0",
    "husky": "~3.1.0",
    "jest": "~24.9.0",
    "jest-fetch-mock": "~2.1.0",
    "lint-staged": "~9.5.0",
    "npm-run-all": "~4.1.5",
    "prettier": "~1.19.0",
    "rollup": "~1.27.0",
    "rollup-plugin-babel": "~4.3.0",
    "rollup-plugin-commonjs": "~10.1.0",
    "rollup-plugin-json": "~4.0.0",
    "rollup-plugin-node-resolve": "~5.2.0",
    "rollup-plugin-terser": "~5.1.0",
    "semantic-release": "~15.13.0",
    "typescript": "~3.7.0"
  },
  "dependencies": {
    "@babel/polyfill": "~7.7.0",
    "@babel/runtime": "~7.7.0",
    "core-js": "~3.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
